---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/snail.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="p-4">
    <slot />
    <style is:global>
      :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          var(--luminous-vivid-amber),
          var(--pale-pink) 30%,
          white 60%
        );
        --pale-pink: #f78da7;
        --vivid-red: #cf2e2e;
        --luminous-vivid-orange: #ff6900;
        --luminous-vivid-amber: #fcb900;
        --light-green-cyan: #7bdcb5;
        --vivid-green-cyan: #00d084;
        --pale-cyan-blue: #8ed1fc;
        --vivid-cyan-blue: #0693e3;
        --vivid-purple: #9b51e0;
        --red: #e2574c;
        --green: #83a17c;
        --orange: #ffbc49;
        --vivid-cyan-blue-to-vivid-purple: linear-gradient(
          135deg,
          rgba(6, 147, 227, 1) 0%,
          rgb(155, 81, 224) 100%
        );
        --light-green-cyan-to-vivid-green-cyan: linear-gradient(
          135deg,
          rgb(122, 220, 180) 0%,
          rgb(0, 208, 130) 100%
        );
        --luminous-vivid-amber-to-luminous-vivid-orange: linear-gradient(
          135deg,
          rgba(252, 185, 0, 1) 0%,
          rgba(255, 105, 0, 1) 100%
        );
        --luminous-vivid-orange-to-vivid-red: linear-gradient(
          135deg,
          rgba(255, 105, 0, 1) 0%,
          rgb(207, 46, 46) 100%
        );
        --gray-to-black: linear-gradient(
          135deg,
          rgb(30, 30, 30) 0%,
          rgb(36, 36, 36) 20%,
          rgb(45, 45, 45) 50%,
          rgb(24, 24, 24) 60%,
          rgb(24, 24, 24) 80%,
          rgb(24, 24, 24) 100%
        );
        --cool-to-warm-spectrum: linear-gradient(
          135deg,
          rgb(74, 234, 220) 0%,
          rgb(151, 120, 209) 20%,
          rgb(207, 42, 186) 40%,
          rgb(238, 44, 130) 60%,
          rgb(251, 105, 98) 80%,
          rgb(254, 248, 76) 100%
        );
        --blush-light-purple: linear-gradient(
          135deg,
          rgb(255, 206, 236) 0%,
          rgb(152, 150, 240) 100%
        );
        --blush-bordeaux: linear-gradient(
          135deg,
          rgb(254, 205, 165) 0%,
          rgb(254, 45, 45) 50%,
          rgb(107, 0, 62) 100%
        );
        --luminous-dusk: linear-gradient(
          135deg,
          rgb(255, 203, 112) 0%,
          rgb(199, 81, 192) 50%,
          rgb(65, 88, 208) 100%
        );
        --pale-ocean: linear-gradient(
          135deg,
          rgb(255, 245, 203) 0%,
          rgb(182, 227, 212) 50%,
          rgb(51, 167, 181) 100%
        );
        --electric-grass: linear-gradient(
          135deg,
          rgb(202, 248, 128) 0%,
          rgb(113, 206, 126) 100%
        );
        --midnight: linear-gradient(
          135deg,
          rgb(2, 3, 129) 0%,
          rgb(40, 116, 252) 100%
        );
        --space-0: 0;
        --space-xs: clamp(0.75rem, calc(0.68rem + 0.34vw), 0.94rem);
        --space-s: clamp(1rem, calc(0.91rem + 0.45vw), 1.25rem);
        --space-m: clamp(1.5rem, calc(1.36rem + 0.68vw), 1.88rem);
        --space-l: clamp(2rem, calc(1.82rem + 0.91vw), 2.5rem);
        --space-xl: clamp(3rem, calc(2.73rem + 1.36vw), 3.75rem);
        --space-2xl: clamp(5rem, calc(4.55rem + 2.27vw), 6.25rem);
        --space-3xl: clamp(7rem, calc(9.09rem + 4.55vw), 8.75rem);
        --space-s-m: clamp(1rem, calc(0.68rem + 1.59vw), 1.88rem);
        --space-m-l: clamp(1.5rem, calc(1.14rem + 1.82vw), 2.5rem);
        --space-l-xl: clamp(2rem, calc(1.36rem + 3.18vw), 3.75rem);
        --space-s-l: clamp(1rem, calc(0.45rem + 2.73vw), 2.5rem);
        --space-xl-2xl: clamp(3rem, calc(-0.45rem + 17.27vw), 6.25rem);
        --space-xl-3xl: clamp(3rem, calc(-0.45rem + 17.27vw), 8.75rem);
        --size-step-0: clamp(1rem, calc(0.91rem + 0.45vw), 1.25rem);
        --size-step-1: clamp(1.33rem, calc(1.11rem + 1.1vw), 1.94rem);
        --size-step-2: clamp(1.78rem, calc(1.33rem + 2.23vw), 3rem);
        --size-step-3: clamp(2.37rem, calc(1.54rem + 4.16vw), 4.66rem);
        --size-step-4: clamp(3.16rem, calc(1.68rem + 7.38vw), 7.22rem);
        --size-step-5: clamp(4.21rem, calc(1.67rem + 12.68vw), 11.18rem);
      }
      html {
        font-family: system-ui, sans-serif;
        background-color: #83a17c;
        padding-block: var(--space-2xl);
      }
      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }
      p {
        font-family: 'Lora', serif;
        font-weight: 400;
        font-size: var(--size-step-0);
      }
      h2 {
        font-family: 'Lora', serif;
        font-weight: 600;
        font-size: var(--size-step-3);
      }
      .stack {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
      }

      .stack > * {
        margin-block: 0;
      }

      .stack > * + * {
        margin-block-start: var(--space-s, 1.5rem);
      }
    </style>
  </body>
</html>
